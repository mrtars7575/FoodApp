<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/favoriteCv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">


            <ImageView
                android:id="@+id/favoriteFoodIv"
                android:layout_width="162dp"
                android:layout_height="132dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/favoriteFoodNameTv"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="37dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/favoriteFoodIv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/favoriteFoodPriceTv"
                android:layout_width="112dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="72dp"
                android:layout_marginBottom="73dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/favoriteFoodIv"
                app:layout_constraintTop_toTopOf="@+id/favoriteFoodIv" />

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="53dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/heart"
                android:text="ToggleButton"
                android:textOff='""'
                android:textOn='""'
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>